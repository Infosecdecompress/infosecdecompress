{
  "extends": ["config:base"],
  "packageRules": [
    {
      "packagePatterns": ["^stylelint"],
      "groupName": "stylelint"
    },
    {
      "packagePatterns": ["^eslint"],
      "groupName": "eslint"
    },
    {
      "packagePatterns": ["gatsby"],
      "groupName": "gatsby"
    },
    {
      "packageNames": ["react", "react-dom", "react-test-renderer"],
      "groupName": "react"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "labels": ["renovate"],
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  }
}
