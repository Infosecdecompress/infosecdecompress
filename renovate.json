{
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch","pin","digest"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true
    }
  ],
  "labels": ["renovate"],
  "rangeStrategy": "bump",
  "prHourlyLimit": 10,
  "prConcurrentLimit": 20,
  "semanticCommits": "enabled",
  "platformAutomerge": true
}
